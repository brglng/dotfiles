{
    "completion": {
        "callSnippet": true
    },
    "signature": {
        "detailSignatureHelper": true
    },
    "runtime": {
        "version": "LuaJIT",
        "requirePattern": [
            "lua/?.lua",
            "lua/?/init.lua",
            "?/lua/?.lua",
            "?/lua/?/init.lua"
        ]
    },
    "workspace": {
        "library": [
            "$VIMRUNTIME",
            "$HOME/.local/share/nvim/lazy",
            "$LOCALAPPDATA/nvim-data/lazy"
        ]
    }
}
