{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "index": {
          "initialBlacklist": ["build/", "cmake-build-.*/"],
          "onChange": true,
          "trackDependency": 2
        }
      }
    }
  },
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "list.insertMappings": {
    "<C-j>": "normal:j",
    "<C-k>": "normal:k"
  }
}
