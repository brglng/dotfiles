[core]
	autocrlf = false
	excludesfile = ~/.gitignore_global
	filemodes = true
	fileMode = true
[http]
	postBuffer = 524288000
[push]
	default = simple
	recurseSubmodules = on-demand
[gc]
	autoDetach = false
[format]
	pretty = oneline
[color]
	ui = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[diff]
	tool = nvim-dirdiff
	guitool = bc3
[difftool]
	prompt = false
[difftool "nvimdiff"]
	cmd = "nvim -R -d -c \"wincmd l\" -d \"$LOCAL\" \"$REMOTE\""
	trustExitCode = true
[difftool "vim-dirdiff"]
	cmd = vim -f '+next' '+execute \"DirDiff\" argv(0) argv(1)' $LOCAL $REMOTE
	trustExitCode = true
[difftool "nvim-dirdiff"]
	cmd = nvim -f '+next' '+execute \"DirDiff\" argv(0) argv(1)' $LOCAL $REMOTE
	trustExitCode = true
[merge]
	tool = nvimdiff
	guitool = bc3
[mergetool]
	conflictstyle = diff3
	prompt = false
[mergetool "nvimdiff"]
	cmd = "nvim -d -c \"4wincmd w | wincmd J\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"  \"$MERGED\""
	trustExitCode = true
[mergetool "kdiff3-noauto"]
	cmd = kdiff3 --L1 \"$MERGED (Base)\" --L2 \"$MERGED (Local)\" --L3 \"$MERGED (Remote)\" -o \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[alias]
	lg = log --pretty=format:'%C(yellow)%h %Cgreen%ad %Cblue%an<%ae> %Creset%s' --abbrev-commit --date=local --color --graph --decorate --all
	ci = commit
	co = checkout
	st = status
	br = branch
	df = difftool --dir-diff
	dg = difftool --gui --dir-diff
[difftool "bc3"]
	trustExitCode = true
[mergetool "bc3"]
	trustExitCode = true
