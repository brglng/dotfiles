[core]
	autocrlf = false
	excludesfile = ~/.gitignore_global
	filemodes = true
	fileMode = true
[push]
	default = simple
	recurseSubmodules = on-demand
[gc]
	autoDetach = false
[format]
	pretty = oneline
[color]
	ui = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[diff]
	tool = nvim-dirdiff
	guitool = bc3
[merge]
	tool = bc3
	guitool = bc3
[difftool]
	prompt = No
[difftool "vim-dirdiff"]
	cmd = ~/.local/bin/vimdirdiff.py \"$LOCAL\" \"$REMOTE\"
[difftool "nvim-dirdiff"]
	cmd = ~/.local/bin/nvimdirdiff.py \"$LOCAL\" \"$REMOTE\"
[difftool "gvim-dirdiff"]
	cmd = ~/.local/bin/gvimdirdiff.py \"$LOCAL\" \"$REMOTE\"
[mergetool "kdiff3-noauto"]
	cmd = kdiff3 --L1 \"$MERGED (Base)\" --L2 \"$MERGED (Local)\" --L3 \"$MERGED (Remote)\" -o \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
[alias]
	lg = log --pretty=format:'%C(yellow)%h %Cgreen%ad %Cblue%an %Creset%s' --abbrev-commit --date=local --color --graph --decorate --all
	ci = commit
	co = checkout
	st = status
	br = branch
	df = difftool
	dd = difftool --dir-diff
	dfg = difftool --gui
	ddg = difftool --gui --dir-diff
[difftool "bc3"]
	trustExitCode = true
[mergetool "bc3"]
	trustExitCode = true
