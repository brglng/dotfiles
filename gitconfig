[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[diff]
	tool = vim-dirdiff
	guitool = bc3
[merge]
	tool = bc3
	guitool = bc3
[difftool]
	prompt = No
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[difftool "vim-dirdiff"]
	cmd = ~/Dropbox/Projects/tools/vimdirdiff.py \"$LOCAL\" \"$REMOTE\"
[difftool "nvim-dirdiff"]
	cmd = ~/Dropbox/Projects/tools/nvimdirdiff.py \"$LOCAL\" \"$REMOTE\"
[difftool "gvim-dirdiff"]
	cmd = ~/Dropbox/Projects/tools/gvimdirdiff.py \"$LOCAL\" \"$REMOTE\"
[difftool "nyaovim-dirdiff"]
	cmd = ~/Dropbox/Projects/tools/nyaovimdirdiff.py \"$LOCAL\" \"$REMOTE\"
[mergetool "kdiff3-noauto"]
	cmd = kdiff3 --L1 \"$MERGED (Base)\" --L2 \"$MERGED (Local)\" --L3 \"$MERGED (Remote)\" -o \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
[alias]
	lg = log --pretty=format:'%C(yellow)%h %Cgreen%ad %Cblue%an %Creset%s' --abbrev-commit --date=local --color --graph --decorate --all
	ci = commit
	co = checkout
	st = status
	br = branch
	df = difftool
